---
import {getLangFromUrl} from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const pageTitle = lang === 'en' ? 'Ekaterina Kniazeva' : 'Екатерина Князева'
const pageDescription = lang === 'en' ? 'Product Designer, UX/UI' : 'Продуктовый дизайнер, UX/UI'
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={pageDescription} />
		<title>{pageTitle}</title>
		<script>
			if (
				localStorage.theme === 'dark' ||
				(!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
			) {
				document.documentElement.classList.add('dark');
			} else {
				document.documentElement.classList.remove('dark');
			}
		</script>
	</head>
	<body>
	<main class="flex w-full h-full gap-22 pl-7 relative overflow-hidden max-md:flex-col max-md:gap-4 max-md:overflow-visible">
		<slot />
	</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
